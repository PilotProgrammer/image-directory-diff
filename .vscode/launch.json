    "version": "0.2.0",
    "configurations": [
        {
            "args": [ "-h", "c:/haystack", "-n", "c:/needles"],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
           // "console": false,
            "name": "DEBUG",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}\\dist\\Program.js",
            "request": "launch",
            "runtimeArgs": [
                "--nolazy"
            ],
            "runtimeExecutable": null,
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node"
        }
    ]
}