{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    //  "inlineSourceMap": true,
    "target": "ES2017",
    "lib": [
      "es2017",
      "es5",
      "es6"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modeules",
    "tests/",
  ]
}