{
  "name": "image-directory-diff",
  "version": "1.0.0",
  "description": "An AWS Lambda function to parse a pdf and synthesize to text using AWS Polly service.",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "help": "npm run build && node dist/Program.js --help",
    "start1": "npm run build && node dist/Program.js --haystack-dir c:/haystack --needles-dir c:/needles",
    "start2": "npm run build && node dist/Program.js -h c:/haystack -n c:/needles",
    "watch": "tsc -w",
    "test": "jest"
  },
  "license": "ISC",
  "jest": {
    "automock": false,
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": ".coverage",
    "testRegex": ".*\\test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "modeulResolution": "node",
          "module": "commonjs",
          "target": "es6"
        }
      }
    },
    "preset": "ts-jest",
    "testMatch": null
  },
  "devDependencies": {
    "@types/node": "^14.14.16",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "typescript": "^4.1.3",
    "yargs": "^15.3.1"
  }
}
